{
  "name": "faceid-office",
  "private": true,
  "version": "1.0.0",
  "description": "Face Identification Office",
  "license": "CHANOM",
  "scripts": {
    "format:client": "pnpm --filter client format",
    "format:server": "pnpm --filter server format",
    "format:ai": "cd ai && poetry run black .",
    "lint:client": "pnpm --filter client lint",
    "lint:server": "pnpm --filter server lint",
    "lint:ai": "cd ai && poetry run ruff check . --fix",
    "format": "prettier -w . && pnpm format:client && pnpm format:server && pnpm format:ai",
    "lint": "pnpm lint:client && pnpm lint:server && pnpm lint:ai",
    "prepare": "husky"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.6.1",
    "@commitlint/config-conventional": "^18.6.3",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.2",
    "prettier": "^3.5.3",
    "prettier-plugin-tailwindcss": "^0.6.11"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
