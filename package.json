{
  "name": "faceid-office",
  "private": true,
  "version": "1.0.0",
  "description": "Face Identification Office",
  "license": "CHANOM",
  "workspaces": [
    "server",
    "client"
  ],
  "scripts": {
    "format": "prettier -w . && cd ai && poetry run black . --line-length 100 && poetry run ruff format .",
    "format:check": "prettier -c . && cd ai && poetry run black --check . && poetry run ruff format --check .",
    "lint": "pnpm format && pnpm --filter client lint && pnpm --filter server lint && pnpm lint:py",
    "lint:py": "cd ai && poetry run ruff check . --fix",
    "prepare": "husky"
  },
  "lint-staged": {
    "client/**/*.{js,jsx,ts,tsx}": "pnpm --filter client exec eslint --max-warnings=0",
    "server/**/*.{js,jsx,ts,tsx}": "pnpm --filter server exec eslint --max-warnings=0",
    "ai/**/*.py": [
      "cd ai && poetry run black . --line-length 100",
      "cd ai && poetry run ruff check . --fix"
    ],
    "*.{json,css,scss,md}": [
      "prettier -w"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^18.6.1",
    "@commitlint/config-conventional": "^18.6.3",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.2",
    "prettier": "^3.5.3",
    "prettier-plugin-tailwindcss": "^0.6.11"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@nestjs/core",
      "@prisma/client",
      "@prisma/engines",
      "@scarf/scarf",
      "@swc/core",
      "prisma",
      "unrs-resolver"
    ],
    "ignoredBuiltDependencies": [
      "unrs-resolver"
    ]
  }
}
