{
  "name": "faceid-office",
  "private": true,
  "version": "1.0.0",
  "description": "Face Identification Office",
  "license": "CHANOM",
  "workspaces": [
    "server",
    "client",
    "ai"
  ],
  "scripts": {
    "format": "prettier -w . && black ai --line-length 100",
    "format:check": "prettier -c . && black --check ai",
    "lint": "pnpm --filter client lint && pnpm --filter server lint && pnpm lint:py",
    "lint:py": "black --check ai",
    "prepare": "husky install"
  },
  "lint-staged": {
    "client/**/*.{js,jsx,ts,tsx}": "pnpm --filter client exec eslint --max-warnings=0",
    "server/**/*.{js,jsx,ts,tsx}": "pnpm --filter server exec eslint --max-warnings=0",
    "*.{json,md}": [
      "prettier -w"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^18.6.1",
    "@commitlint/config-conventional": "^18.6.3",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.2",
    "prettier": "^3.5.3",
    "prettier-plugin-tailwindcss": "^0.6.11"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@nestjs/core",
      "@prisma/client",
      "@prisma/engines",
      "@scarf/scarf",
      "@swc/core",
      "prisma",
      "unrs-resolver"
    ],
    "ignoredBuiltDependencies": [
      "unrs-resolver"
    ]
  }
}
